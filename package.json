{
  "name": "umg-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run lint check-types build --filter=!desktop --filter=!mobile",
    "build:all": "turbo run lint check-types build",
    "dev": "turbo run dev",
    "dev:web": "concurrently \"./apps/ai-core/start.sh\" \"turbo run dev --filter=web\"",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:desktop": "turbo run dev --filter=desktop",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
